  height: 70rpx;
  padding: 15rpx auto 15rpx auto;
  font-size: 40rpx;
  border-bottom: 1px solid #d7d9de;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  line-height: 70rpx;
}
